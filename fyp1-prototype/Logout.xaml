<Window x:Class="fyp1_prototype.Logout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:local="clr-namespace:fyp1_prototype"
        mc:Ignorable="d"
        Title="Logout" Height="400" Width="700" Icon="Resources/hand.png" WindowState="Normal" WindowStyle="None" ResizeMode="NoResize">
	<Grid>
		<Border BorderThickness="1" BorderBrush="Black"></Border>
		<k:KinectRegion Name="kinectKinectRegion">
			<Grid>
				<TextBlock Name="textBlock" Text="You are already logged. Do you want to log out?" FontSize="26" TextAlignment="Center" Width="600" Height="150" VerticalAlignment="Center" Margin="0,75,0,175" HorizontalAlignment="Center"/>
				<Button Name="btnBack" Content="Back" Width="220" Height="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="-300 0 0 20" Click="back"/>
				<Button Name="btnLogout" Content="Log Out" Width="220" Height="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="300 0 0 20" Click="logout"/>
			</Grid>
		</k:KinectRegion>
	</Grid>
</Window>
