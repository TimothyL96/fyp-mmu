<Window x:Class="fyp1_prototype.GameMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:local="clr-namespace:fyp1_prototype"
        mc:Ignorable="d"
        Title="Choose a Game Mode" Height="400" Width="600" Icon="Resources/handCursor.png" WindowState="Normal" ResizeMode="NoResize" StateChanged="Window_StateChanged">
    <Grid>
		<Border BorderThickness="1" BorderBrush="Black"></Border>
		<k:KinectRegion Name="kinectKinectRegion">
			<Grid>
				<Button Name="btnSurvival" Content="Survival" Width="260" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-300 0 0 0" Click="survival"/>
				<Button Name="btnTimeAttack" Content="Time Attack" Width="260" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="300 0 0 0" Click="timeAttack"/>
			</Grid>
		</k:KinectRegion>
	</Grid>
</Window>
