<Window x:Class="fyp1_prototype.DragDropImages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:fyp1_prototype"
        mc:Ignorable="d"
        Title="Play Game" Height="900" Width="1200" Icon="Resources/grab.png" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize" StateChanged="Window_StateChanged" Closed="Window_Closed" Loaded="Window_Loaded" >
    <Grid>
		<Border BorderThickness="5" BorderBrush="Black"></Border>
		<k:KinectUserViewer Name="kinectUserViewer" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" k:KinectRegion.KinectRegion="{Binding ElementName=kinectKinectRegion}"></k:KinectUserViewer>
		<Grid>
			<Canvas Name="canvas">
				<Button Name="back" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Height="100" Margin="25,25,0,0">Back</Button>
				<Image Canvas.Left="500" Canvas.Bottom="500" Name="handCursor"	Stretch="Fill" Height="100" Width="80" Source="Resources/grab.png"			Panel.ZIndex="5"/>
				<Image Canvas.Left="140" Canvas.Bottom="0"	Name="blueBin"		Stretch="Fill" Height="160" Width="140" Source="Resources/bluebin.png"		Panel.ZIndex="3"/>
				<Image Canvas.Left="560" Canvas.Bottom="0"	Name="orangeBin"	Stretch="Fill" Height="160" Width="140" Source="Resources/orangebin.png"	Panel.ZIndex="3"/>
				<Image Canvas.Left="980" Canvas.Bottom="0"	Name="brownBin"		Stretch="Fill" Height="160" Width="140" Source="Resources/brownbin.png"		Panel.ZIndex="3"/>
				<Viewbox>
					<TextBlock Name="tb" Text="Initializing..."/>
				</Viewbox>
			</Canvas>
		</Grid>
	</Grid>
</Window>
