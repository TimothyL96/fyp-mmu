<Window x:Class="fyp1_prototype.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:local="clr-namespace:fyp1_prototype"
        mc:Ignorable="d"
        Title="Error" Height="400" Width="500" Icon="Resources/hand.png" ResizeMode="NoResize">
	<Grid>
		<Border BorderThickness="1" BorderBrush="Black"></Border>
		<k:KinectRegion Name="kinectKinectRegion">
			<Grid>
				<TextBlock Name="textBlock" Text="" FontSize="16" TextAlignment="Center" Width="400" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center"/>
				<Button Name="btnOK" Width="225" Height="90" VerticalAlignment="Bottom" Margin="0 0 0 20" Content="OK" Click="back"/>
			</Grid>
		</k:KinectRegion>
	</Grid>
</Window>
