<Window x:Class="fyp1_prototype.LoadGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:k="http://schemas.microsoft.com/kinect/2013"
        xmlns:local="clr-namespace:fyp1_prototype"
        mc:Ignorable="d"
        Title="LoadGame" Height="300" Width="400" Icon="Resources/handCursor.png" WindowState="Normal" ResizeMode="NoResize" StateChanged="Window_StateChanged">
	<Grid>
		<Border BorderThickness="1" BorderBrush="Black"></Border>
		<k:KinectRegion Name="kinectKinectRegion">
			<Grid>
				<TextBlock Name="textBlock" Text="You have no loaded game"  VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 -50 0 0" Width="Auto" Height="Auto"/>
				<Button Name="buttonBack" Content="Back" Width="120" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-150 150 0 0" Click="back"/>
				<Button Name="buttonLoad" Content="New Game" Width="120" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="150 150 0 0" Click="playGame"/>
			</Grid>
		</k:KinectRegion>
	</Grid>
</Window>
